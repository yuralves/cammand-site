<% include partials/header %>

	<script src="../js/controller/newPasswordCtrl.js"></script>

</head>

<body ng-app="newPassword" ng-controller="newPasswordCtrl" id="top">

	<% include partials/navbar %> 
	
	<!-- body
   ================================================== -->

		<div class="container">
		  
		  <div class="container-inner">
		    <div class="login">
		      <h1>Redefinição de senha</h1>
		    </div>
		  
  		  <div class="pre-form">
  		    <p>Por favor insira sua nova senha abaixo.</p>
  		  </div>
		  
  		  <div class="login-form">
  		  	
  		  	<!--shows any message that comes back when validating password reset request-->
  		  	<% if (message.error.length >0) { %>
  		    	<div class="alert alert-danger"><%= message.error %></div>
  		    <% } %>
  		    <% if (message.success.length >0) { %>
  		    	<div class="alert alert-success"><%= message.success %></div>
  		    <% } %>
  		    <% if (message.info.length >0) { %>
  		    	<div class="alert alert-info"><%= message.info %></div>
  		    <% } %>
  		    
  		    <form name="newPasswordForm" action="/restricted/reset/new/<%=user.local.resetPasswordToken%>" method="POST">
  		      
  		      <input type="password" name="password" placeholder="Nova senha" ng-required="true" ng-model="password">
  		      
  		      <input type="password" name="confirmPassword" placeholder="Confirmar nova senha" ng-required="true" ng-model="confirmPassword">
  		      
  		      <button class="btn btn-hfcf btn-block" ng-disabled="newPasswordForm.$invalid || (password != confirmPassword)">Redefinir senha</button>
  		      
  		    </form>
  		    
  		    <div class="login-link">
  		      <p><a href="/restricted/login">Voltar para a página de acesso</a>.</p>
  		    </div>
  		    
  		  </div> <!-- end login-form -->
		    
		  </div> <!-- end container-inner -->
		  
    </div> <!-- end container -->

<% include partials/footer %>